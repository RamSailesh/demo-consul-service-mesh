{
  "service": {
    "name": "api-gateway",
    "id":"api-gateway-v1",
    "address": "10.5.0.3",
    "port": 9091,
    "connect": { 
      "sidecar_service": {
        "port": 20000,
        "check": {
          "name": "Connect Envoy Sidecar",
          "tcp": "10.5.0.3:20000",
          "interval": "10s"
        },
        "proxy": {
          "upstreams": [
            {
              "destination_name": "api",
              "local_bind_address": "0.0.0.0",
              "local_bind_port": 9091
            }
          ]
        }
      }
    }  
  }
}
